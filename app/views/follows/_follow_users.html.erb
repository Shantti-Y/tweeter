
<% unless follow == log_user %>
  <% if log_user.following?(follow) %>
    <%= link_to 'Unfollow', follow_path(follow), method: :delete, class: 'btn btn-danger', remote: true %>
  <% else %>
    <%= link_to 'Follow', follows_path(id: follow), method: :post, class: 'btn btn-info', remote: true %>
  <% end %>
<% end %>
