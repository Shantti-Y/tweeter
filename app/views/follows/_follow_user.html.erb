<% if log_user.following?(@user) %>
  <%= link_to 'Following', follow_path(@user), method: :delete, class: 'btn btn-unfollow btn-primary', remote: true %>
<% else %>
  <%= link_to 'Follow', follows_path(id: @user), method: :post, class: 'btn btn-follow btn-info', remote: true %>
<% end %>
<script>
  $('.btn-unfollow').hover(function(){
    $(this).html('Unfollow');
    $(this).addClass('btn-danger');
  });
  $('.btn-unfollow').mouseout(function(){
    $(this).html('Following');
    $(this).removeClass('btn-danger');
  });
</script>
